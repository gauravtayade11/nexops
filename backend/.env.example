# Application
APP_NAME=NexOps Center
APP_VERSION=1.0.0
DEBUG=false
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production

# Database (optional - for persistence features)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nexops

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Kubernetes
K8S_CONFIG_PATH=~/.kube/config
K8S_IN_CLUSTER=false

# AI Provider (optional - gemini or anthropic)
AI_PROVIDER=gemini

# Google Gemini - Get key at https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Claude AI (Anthropic) - Alternative
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-20250514

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
